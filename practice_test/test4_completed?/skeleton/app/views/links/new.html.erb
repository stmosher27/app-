<h1>New Link</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/links" method="post">
  <input type ="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Title</label>
  <input id="Title" type="text" name="link[title]" value="<%= @link.title %>">

  <label>URL</label>
  <input id="URL" type="text" name="link[url]" value="<%= @link.url %>">

  <input type="submit" value="Create New Link">
</form>
